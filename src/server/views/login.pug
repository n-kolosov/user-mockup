extends layout
block content
  if flash.includes('Login failed. Try again with another e-mail or password')
    .alert.alert-danger(role='alert') #{flash}
  h5 Login
  form(action='/auth/login', method='post')
    .form-group
      input.form-control(type='text', name='username', placeholder='E-Mail')
    .form-group
      input.form-control(type='password', name='password', placeholder='Password')
    button.btn.btn-primary(type='submit') Submit